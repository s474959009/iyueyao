<div>

    <% if (!isFirstPage) { %>
    <span class="prepage"><a title="上一页" href="?p=<%= page-1 %>">上一页</a></span>
    <% }else{ %>
    <span class="disable prepage"><a title="上一页" href="javascript:;">上一页</a></span>
    <% } %>

    <% if (!isLastPage) { %>
    <span class="nextpage"><a title="下一页" href="?p=<%= page+1 %>">下一页</a></span>
    <% }else{ %>
    <span class="disable nextpage"><a title="下一页" href="javascript:;">下一页</a></span>
    <% } %>
</div>