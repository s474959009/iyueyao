      <p>欢迎来到这里哦 <%= user.name %></p>
      <% } else { %>
      <p>欢迎来到这里哦 ,陌生的朋友</p>
      <% } %>

      <hr/>
      <% posts.forEach(function (post, index) { %>
      <p><h2><a href="/<%= post.type %>/<%= post.time.day %>/<%= post.title %>"><%= post.title %></a></h2></p>
      <p class="info">
          作者：<a href="#"><%= post.name %></a> |
          日期：<%= post.time.minute %>
      </p>
      <p><%- post.post %></p>
      <% }) %>
