<div class="row ">
<% if(post.comments.length>0) { %>
<div class="comment col-md-8 col-md-offset-2">
    <% post.comments.forEach(function (comment, index) { %>
    <p><a href="<%= comment.website %>"><%= comment.name %></a>
        <span class="info"> 回复于 <%= comment.time %></span></p>
    <p><%- comment.content %></p>
    <% }) %>
</div>
<% }else{ }%>
<form class="comment form-horizontal col-md-8 col-md-offset-2" action="/commont/<%= post.time.day %>/<%= post.title %>" method="post">
    <div class="form-group"> 姓名：<input class="form-control" type="text" name="name" /></div>
    <div class="form-group">邮箱：<input class="form-control" type="text" name="email" /></div>
    <div class="form-group">网址：<input class="form-control" type="text" name="website" value="http://" /></div>
    <div class="form-group"><textarea name="content" class="form-control"rows="5" cols="80"></textarea><br /></div>
    <div class="form-group"><input type="submit" value="留言" /></div>
</form>
    </div>